#include <iostream>
#include <conio.h>

using namespace std;
int main()
{
    int n = 22, a = 0, b = 1, next = 0;
    
    cout << "Fibonacci Series: " <<endl;

    for (int i = 1; i <= n; ++i)
    {
        if( i == 1)
        {
            cout << " " << a << ",";
            continue;
        }
        
        if (i == 2)
        {
            cout << b << ",";
            continue;
        }
        
        next = a + b ;
        a = b;
        b = next;
        
        cout << next <<",";
    }
    
_getch();
return 0;
}
